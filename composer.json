{
	"name": "jweiland/form-tools",
	"type": "typo3-cms-extension",
	"description": "A little collection of tools for TYPO3's EXT:form",
	"license": "GPL-2.0-or-later",
	"keywords": ["typo3", "TYPO3 CMS", "form", "tools"],
	"homepage": "https://www.jweiland.net",
	"authors": [
		{
			"name": "Stefan Froemken",
			"email": "projects@jweiland.net",
			"role": "Lead Developer"
		}
	],
	"support": {
		"email": "projects@jweiland.net",
		"issues": "https://github.com/jweiland-net/form_tools/issues",
		"source": "https://github.com/jweiland-net/form_tools"
	},
	"require": {
		"ext-dom": "*",
		"ext-libxml": "*",
		"typo3/cms-core": "^10.4.19 || ^11.5"
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"friendsofphp/php-cs-fixer": "^3.0",
		"nimut/testing-framework": "^6.0",
		"phpunit/phpunit": "^9.5",
		"phpspec/prophecy-phpunit": "^2.0"
	},
	"autoload": {
		"psr-4": {
			"JWeiland\\FormTools\\": "Classes"
		}
	},
	"config": {
		"vendor-dir": ".build/vendor",
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		}
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "form_tools",
			"app-dir": ".build",
			"web-dir": ".build/public"
		}
	},
	"scripts": {
		"php:fix": ".build/vendor/bin/php-cs-fixer --config=Build/.php_cs.php fix Classes",
		"ci:php:lint": "find *.php Classes Configuration -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
		"ci:php:fixer": ".build/vendor/bin/php-cs-fixer --config=Build/.php_cs.php fix --dry-run -v --show-progress=dots --diff Classes",
		"ci:tests:unit": "php -d date.timezone=Europe/Berlin .build/vendor/bin/phpunit -c .build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit",
		"ci:tests:functional": "find 'Tests/Functional' -wholename '*Test.php' | parallel --gnu 'echo; echo \"Running functional test suite {}\"; php -d date.timezone=Europe/Berlin .build/vendor/bin/phpunit -c .build/vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml {}';",
		"link-extension": [
			"@php -r 'is_dir($extFolder=__DIR__.\"/.build/public/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
			"@php -r 'file_exists($extFolder=__DIR__.\"/.build/public/typo3conf/ext/form_tools\") || symlink(__DIR__,$extFolder);'"
		],
		"post-autoload-dump": [
			"@link-extension"
		]
	}
}
